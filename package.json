{
  "name": "mcp-playwright",
  "version": "1.0.0",
  "description": "Model Context Protocol (MCP) server for Playwright automation and testing",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "mcp-playwright": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "jest",
    "prepublishOnly": "npm run build",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "setup": "node scripts/setup.js",
    "postinstall": "npm run setup"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "playwright",
    "automation",
    "testing",
    "browser",
    "web-scraping"
  ],
  "author": "devcodingskill",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/devcodingskill/mcp-playwright.git"
  },
  "bugs": {
    "url": "https://github.com/devcodingskill/mcp-playwright/issues"
  },
  "homepage": "https://github.com/devcodingskill/mcp-playwright#readme",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "playwright": "^1.40.0",
    "commander": "^11.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
